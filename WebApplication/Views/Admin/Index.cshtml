@model IEnumerable<GameViewModel>
@{
    ViewBag.Title = "Все Игры";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">Id</th>
        <th class="text-right">Team1</th>
        <th class="text-right">Team2</th>
        <th class="text-right">Score1</th>
        <th class="text-right">Score2</th>
        <th class="text-right">Start</th>
        <th class="text-right">End</th>
        <th class="text-right">Type</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.GameId</td>
            <td class="text-right">@item.Team1.Name</td>
            <td class="text-right">@item.Team2.Name</td>
            <td class="text-right">@item.Score1</td>
            <td class="text-right">@item.Score2</td>
            <td class="text-right">@item.Start.ToString()</td>
            <td class="text-right">@item.End.ToString()</td>
            <td class="text-right">@item.Type</td>

            <td class="text-center">
                <form asp-action="DeleteGame" method="post">
                    <a asp-action="EditGame" asp-route-id="2" class="btn btn-sm btn-warning">
                        Edit
                    </a>
                    <input type="hidden" name="GameId" value="@item.GameId" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }

</table>
<div class="text-center">
    <a asp-action="CreateGame" class="btn btn-primary">
        Добавить Игру
    </a>
</div>
